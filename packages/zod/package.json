{
	"name": "@faivform/zod",
	"description": "Adapter to use Zod with @tuentyfaiv/svelte-form",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev:web": "vite dev",
		"build:web": "vite build && pnpm build",
		"preview:web": "vite preview",
		"sync": "svelte-kit sync",
		"dev": "pnpm sync && svelte-package -w",
		"build": "pnpm sync && svelte-package && publint",
		"test": "pnpm test:integration && pnpm test:unit",
		"check": "pnpm sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"keywords": [
		"Svelte",
		"Form",
		"Faivform",
		"Validation",
		"TuentyFaiv"
	],
	"author": "Tonalli LÃ³pez <contact@tuentyfaiv.com>",
	"license": "MIT",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"peerDependencies": {
		"@tuentyfaiv/svelte-form": "workspace:^",
		"svelte": "^4.0.0",
		"zod": "^3.0.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.41.2",
		"@repo/eslint-config": "workspace:^",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/package": "^2.2.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@tuentyfaiv/svelte-form": "workspace:^",
		"@types/eslint": "8.56.2",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.56.0",
		"publint": "^0.2.7",
		"svelte": "^4.2.10",
		"svelte-check": "^3.6.4",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.0",
		"vitest": "^1.2.2",
		"zod": "^3.22.4"
	},
	"engines": {
		"npm": ">=8.0.0",
		"pnpm": ">=8.0.0",
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TuentyFaiv/svelte-form/tree/main/packages/zod"
	},
	"bugs": {
		"url": "https://github.com/TuentyFaiv/svelte-form/issues"
	},
	"homepage": "https://forms.tuentyfaiv.com/adapters/zod/",
	"directories": {
		"test": "tests"
	}
}