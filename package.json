  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "eslint-import-resolver-node": "^0.3.7",
    "eslint-module-utils": "^2.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-scope": "^7.2.0",
    "eslint-visitor-keys": "^3.4.0",
    "svelte-eslint-parser": "^0.27.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TuentyFaiv/svelte-form.git"
