---
import Header from "@sharing/organisms/Header.astro";

const lang = Astro.currentLocale as "es" | "en" ?? "en";
---

<html {lang}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link href="themes/prism-one-dark.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Header {lang} />
    <main class="layout">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  @tailwind variants;
</style>

<style>
  .layout {
    @apply w-full;
  }
</style>